    <!-- Main  --> 
    <section class="page landing-page">
        <section class="clean-block clean-hero" style="background-image:url(&quot;~/img/tech/image4.jpg&quot;);color:rgba(166, 201, 223, 0.2); background-attachment:fixed;">
            <div class="text">
                <h2 style="color: black; font-weight: 600;background-color: rgba(255, 255, 255, 0.1);">Welcome To courseON</h2>
